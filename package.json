{
  "name": "typescript-api-starter",
  "version": "0.0.1",
  "scripts": {
    "dev": "better-npm-run dev",
    "start": "better-npm-run start",
    "jest": "jest",
    "tsc": "tsc -p . --noEmit",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' '__tests__/**/*.{ts,tsx}'",
    "test": "npm run tsc && npm run lint && npm run jest -- --coverage"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon | bunyan -o short -l trace",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start": {
      "command": "ts-node src/app",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "@types/bluebird-global": "^3.5.4",
    "@types/body-parser": "^1.16.8",
    "@types/bunyan": "^1.8.4",
    "@types/cors": "^2.8.3",
    "@types/ejs": "^2.5.0",
    "@types/express": "^4.11.1",
    "@types/express-domain-middleware": "0.0.6",
    "@types/http-errors": "^1.6.1",
    "@types/mongoose": "^5.0.1",
    "@types/mz": "0.0.32",
    "@types/nodemailer": "^4.3.3",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/passport": "^0.4.3",
    "@types/ramda": "github:types/npm-ramda#dist",
    "better-npm-run": "^0.1.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "config": "^1.29.4",
    "cors": "^2.8.4",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-api-error-handler": "^1.1.0",
    "express-domain-middleware": "^0.1.0",
    "express-route-config": "0.1.2",
    "express-wrap-async": "^1.0.3",
    "http-errors": "^1.6.2",
    "lodash": "^4.17.5",
    "mongoose": "^5.0.4",
    "mz": "^2.7.0",
    "nodemailer": "^4.4.2",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.0",
    "ramda": "^0.25.0",
    "ts-contract": "0.0.7",
    "ts-node": "^4.1.0",
    "typescript": "2.8.0-dev.20180308"
  },
  "devDependencies": {
    "nodemon": "^1.14.12",
    "tslint": "^5.9.1"
  }
}
